# Environment variables template
# Copy this file to .env and fill in your values

# Flask configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here

# Model paths
CAPTIONING_MODEL_PATH=models/checkpoints/captioning_model.pth
SEGMENTATION_MODEL_PATH=models/checkpoints/segmentation_model.pth
INTEGRATED_MODEL_PATH=models/checkpoints/integrated_model.pth

# Data paths
DATA_DIR=data/
UPLOAD_DIR=static/uploads/
OUTPUT_DIR=static/outputs/

# API configuration
MAX_CONTENT_LENGTH=16777216  # 16MB
ALLOWED_EXTENSIONS=jpg,jpeg,png,bmp,tiff

# Weights & Biases
WANDB_API_KEY=your-wandb-api-key
WANDB_PROJECT=image-captioning-segmentation

# CUDA settings
CUDA_VISIBLE_DEVICES=0
TORCH_HOME=models/torch_cache/

# Database (if needed)
DATABASE_URL=sqlite:///app.db

# External APIs
HUGGINGFACE_API_KEY=your-huggingface-api-key
